{
    "compilerOptions": {
        "module": "nodenext",
        "removeComments": false,
        "outDir": "dist/",
        "strict": true,
        "declaration": true,
        "target": "es2022",
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "sourceMap": false,
        "typeRoots" : [
            "node_modules/@types",
            "types"
        ]
    },
    "include": [
        "src/**/*"
    ]
}